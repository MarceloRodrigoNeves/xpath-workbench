<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15"
      alignment="CENTER_LEFT"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.m7sistemas.xpathworkbench.ui.XPathFunctionsController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TextField fx:id="searchField" promptText="Digite nome ou descrição da função..." />
    <TableView fx:id="functionTable">
        <columns>
            <TableColumn text="Categoria" fx:id="categoryCol"/>
            <TableColumn text="Nome" fx:id="nameCol"/>
            <TableColumn text="Descrição" fx:id="descriptionCol"/>
            <TableColumn text="Modelo" fx:id="modelCol"/>
            <TableColumn text="Resultado" fx:id="resultCol"/>
        </columns>
    </TableView>

</VBox>
